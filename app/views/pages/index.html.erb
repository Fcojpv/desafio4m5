<h1 class="text-center my-5">Personajes de Harry Potter</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table table-hover table-bordered shadow">
        <thead class="table-dark">
          <tr class="text-center">
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Ubicaci√≥n</th>
            <th scope="col">Casa</th>
          </tr>
        </thead>
        <tbody>
          <% @characters.each_with_index do |character, index| %>
            <tr>
              <th scope="row" class="text-center"><%= index + 1 %></th>
              <td><%= character.name %></td>
              <td><%= character.location %></td>
              <td>
                <span class="badge rounded-pill 
                  <%= case character.house
                      when 'Gryffindor' then 'bg-danger'
                      when 'Slytherin' then 'bg-success'
                      when 'Ravenclaw' then 'bg-primary'
                      when 'Hufflepuff' then 'bg-warning text-dark'
                      else 'bg-secondary'
                      end %>">
                  <%= character.house %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


